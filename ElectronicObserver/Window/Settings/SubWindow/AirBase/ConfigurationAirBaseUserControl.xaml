<UserControl
	x:Class="ElectronicObserver.Window.Settings.SubWindow.AirBase.ConfigurationAirBaseUserControl"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:ElectronicObserver.Window.Settings.SubWindow.AirBase"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	d:DataContext="{d:DesignInstance local:ConfigurationAirBaseViewModel}"
	d:DesignHeight="450"
	d:DesignWidth="800"
	mc:Ignorable="d"
	>
	<StackPanel>
		<CheckBox
			Content="{Binding Translation.FormBaseAirCorps_ShowEventMapOnly}"
			IsChecked="{Binding ShowEventMapOnly}"
			ToolTip="{Binding Translation.FormBaseAirCorps_ShowEventMapOnlyToolTip}"
			/>
	</StackPanel>
</UserControl>
