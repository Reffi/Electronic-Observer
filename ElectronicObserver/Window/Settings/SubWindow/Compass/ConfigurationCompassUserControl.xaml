<UserControl
	x:Class="ElectronicObserver.Window.Settings.SubWindow.Compass.ConfigurationCompassUserControl"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:controls="http://schemas.modernwpf.com/2019"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:ElectronicObserver.Window.Settings.SubWindow.Compass"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	d:DataContext="{d:DesignInstance local:ConfigurationCompassViewModel}"
	d:DesignHeight="450"
	d:DesignWidth="800"
	mc:Ignorable="d"
	>
	<StackPanel>
		<StackPanel Orientation="Horizontal">
			<TextBlock Text="{Binding Translation.CandidateDisplayCount}" />

			<controls:NumberBox
				Minimum="1"
				SpinButtonPlacementMode="Inline"
				Value="{Binding CandidateDisplayCount}"
				/>
		</StackPanel>

		<CheckBox
			Content="{Binding Translation.FormFleet_IsScrollable}"
			IsChecked="{Binding IsScrollable}"
			ToolTip="{Binding Translation.FormFleet_IsScrollableToolTip}"
			/>

		<StackPanel Orientation="Horizontal">
			<TextBlock Text="{Binding Translation.NameWidth}" />

			<controls:NumberBox
				Minimum="0"
				SpinButtonPlacementMode="Inline"
				ToolTip="{Binding Translation.FormArsenal_MaxShipNameWidthToolTip}"
				Value="{Binding MaxShipNameWidth}"
				/>
		</StackPanel>
	</StackPanel>
</UserControl>
