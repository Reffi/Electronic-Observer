<UserControl
	x:Class="ElectronicObserver.Window.Wpf.Fleet.Views.ToolTipStat"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:ElectronicObserver.Window.Wpf.Fleet.Views"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	x:Name="ToolTipStatControl"
	d:DesignHeight="450"
	d:DesignWidth="800"
	mc:Ignorable="d"
	>
	<StackPanel DataContext="{Binding ElementName=ToolTipStatControl}" Orientation="Horizontal">
		<StackPanel.Resources>
			<Style x:Key="HideIfTotalNull" TargetType="TextBlock">
				<Setter Property="Visibility" Value="Visible" />
				<Style.Triggers>
					<DataTrigger Binding="{Binding Total}" Value="{x:Null}">
						<Setter Property="Visibility" Value="Collapsed" />
					</DataTrigger>
				</Style.Triggers>
			</Style>
		</StackPanel.Resources>

		<Image Margin="0 0 2 0" Source="{Binding Icon}" />

		<TextBlock VerticalAlignment="Center" Text="{Binding Base}" />

		<TextBlock
			VerticalAlignment="Center"
			Style="{StaticResource HideIfTotalNull}"
			Text="/"
			/>

		<TextBlock
			VerticalAlignment="Center"
			Style="{StaticResource HideIfTotalNull}"
			Text="{Binding Total}"
			/>
	</StackPanel>
</UserControl>
