<UserControl
	x:Class="ElectronicObserver.Window.Tools.EventLockPlanner.NumberRange"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:controls="http://schemas.modernwpf.com/2019"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:ElectronicObserver.Window.Tools.EventLockPlanner"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	x:Name="NumberRangeControl"
	d:DesignHeight="450"
	d:DesignWidth="800"
	mc:Ignorable="d"
	>
	<StackPanel DataContext="{Binding ElementName=NumberRangeControl}" Orientation="Horizontal">
		<TextBlock
			Margin="2 0"
			VerticalAlignment="Center"
			Text="{Binding Text}"
			/>
		<controls:NumberBox
			VerticalAlignment="Center"
			Minimum="0"
			Value="{Binding Minimum}"
			/>
		<TextBlock VerticalAlignment="Center" Text="～" />
		<controls:NumberBox
			VerticalAlignment="Center"
			Minimum="0"
			Value="{Binding Maximum}"
			/>
	</StackPanel>
</UserControl>
